generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url  = env("DATABASE_URL")
}

model User{
  id String  @id @default(uuid()) @map("_id")
  name String
  email String 
  booked Booked[]
  createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}

model Booked{
 id String @id @default(uuid()) @map("_id")
name String
payment String 
Source String
Destination String
Price String

userId String
user User @relation(fields: [userId],references: [id],onDelete:Cascade)
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
 @@index([userId])
}